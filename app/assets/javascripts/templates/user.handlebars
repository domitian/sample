
<div class="row">
  	<div class="col-md-2">
  	</div>
 	<div class="col-md-8">
		{{#if showadderrand}}
			<div class="panel panel-default">
			<div class="panel-body">
				{{view view.errandView}}
			</div>
			</div>
		{{else}}
		<button class='btn btn-default btn-sm' {{action 'errandAdd' this on='click' }}> Add errand </button>
		{{/if}}
		<hr>
		{{#each rec in record}}
			{{rec.title}} on {{rec.created_at}}<br>
			{{rec.description}}
			<hr>
		{{/each}}
	</div>

	<div class="col-md-2">
	</div>
</div>