
 		<hr>
		{{#if showadderrand}}
			<div class="panel panel-default">
			<div class="panel-body">
				{{view view.errandView}}
			</div>
			</div>
		{{else}}
		<div class="btn-group btn-group-justified">
			<div class='btn-group'>
			<button class='btn btn-success btn-lg' {{action 'errandAdd' this on='click' }}> Post Information </button> 
			</div>

			<div class='btn-group'>
			<button class='btn btn-info btn-lg' {{action 'geoFindMe' this on='click'}}>Share my location</button>
			</div>
			<div class='btn-group'>
			<button class='btn btn-danger btn-lg ' {{action 'refreshRec' this on='click' }}> Refresh </button> 
			</div>

		</div>
		{{/if}}
		<div id="out"></div>
		<hr>
		<div class='pull-right'>
		<b>Display by </b>{{view Ember.Select content=uniqueUserListHash  optionValuePath="content.id" optionLabelPath="content.username" value=selectedUser}}
		</div>
		{{#if is_approved}}
			<hr>
			<div  >
				{{#each rec in unApproved}}
					<div class='alert alert-danger'> Does  {{rec.name}} belong to your family? if yes, <button class='btn btn-success btn-sm' {{action 'approveUser' rec on='click'}}> Approve </button> </div>
				{{/each}}
			</div>

			<div style="background-color:#E6E6FA" >
			{{#each rec in controller.recentAdded}}
				<hr>
				<p> {{rec.title}} <font size='1'> <i class='pull-right'> {{rec.updated_at}} </i> </font> </p>
				{{rec.description}}  by {{this.name}} &nbsp; &nbsp; tags: {{rec.tag}}
				
			{{/each}}	
			</div>		
			{{#if defaultView}}

				{{#each rec in recordFormat}}
					<hr>
					{{rec.errand.title}} on <font size='1'><i class='pull-right' {{rec.errand.updated_at}} </i> </font><br>
					{{rec.errand.description}} by 
					<a {{action 'showBy' rec.id this 'user' on='click'}}> {{rec.written_by}} </a> &nbsp; &nbsp;
					 <span > 
					 	{{#each tags in rec.errand.tag}} 
					 		<button class='btn btn-default btn-xs pull-right' {{action 'showBy' tags this 'tags' on='click'}}>   
					 			{{tags}}
					 		</button>
					 	{{/each}}
					 </span>
				{{/each}}
			{{else}}
				{{#if controller.byTags}}
				<button class='btn btn-primary btn-sm' {{action 'backToDefault' this on='click'}}> 
					<i class="fa fa-long-arrow-left"></i> Back To Dashboard 
				</button>
				{{/if}}
				<hr>
				{{#each rec in controller.newListOrder}}
					{{dashboard-updates rec=rec}}
				{{/each}}
			{{/if}}

		{{else}}	
		 	<div class="alert alert-success">You need to be approved by family </div>	
		 {{/if}}
		 <hr>

