<div class="panel panel-default">
	<div class="panel-body">
<p class="text-primary">{{rec.errand.title}} <font size='1'> <i class='pull-right' {{rec.errand.updated_at}} </i> </font></p>

{{#each attributes in rec.errand.description.attributes}} 
	{{attributes.label}}&nbsp; &nbsp; {{attributes.value}} <br>
{{/each}}
by {{rec.written_by}} &nbsp; &nbsp;
 <span > 
 	{{#each tags in rec.errand.tag}} 
 		<button class='btn btn-default btn-xs pull-right disabled' {{action 'showBy' tags this 'tags' on='click'}}>   
 			{{tags}}
 		</button>
 	{{/each}}
 </span>

</div>
</div>
